<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="bugfeed.itc.bugfeed">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterScreen" />
        <activity
            android:name=".DeveloperProfileActivity"
            android:label="@string/title_activity_developer_profile"
            android:parentActivityName=".LoginScreen"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="bugfeed.itc.bugfeed.LoginScreen" />
        </activity>
        <activity
            android:name=".UserProfileActivity"
            android:label="@string/title_activity_user_profile"
            android:parentActivityName=".LoginScreen"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="bugfeed.itc.bugfeed.LoginScreen" />
        </activity>
        <activity android:name=".AddApps" />
        <activity android:name=".ForgotPasswordActivity" />
        <activity
            android:name=".UserComplaintActivity"
            android:label="@string/title_activity_user_complaint"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>