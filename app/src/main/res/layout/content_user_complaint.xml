<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="bugfeed.itc.bugfeed.UserComplaintActivity"
    android:background="@drawable/back1">

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="List of Problems"
       android:textSize="20dp"
       android:layout_gravity="center"
       android:textStyle="bold"
       android:textColor="#000"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crash Problem"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Virus"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hanging"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Authentication Problem"/>

    <EditText
        android:id="@+id/appdesc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:elevation="15dp"
        android:gravity="center"
        android:hint="Description of Application"
        android:inputType="textMultiLine"
        android:scrollbarStyle="insideInset"
        android:lines="8"
        android:maxLines="10"
        android:minLines="6"
        android:overScrollMode="always"
        android:scrollbars="vertical" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/choosefile"
        android:text="Choose FILE +"
        android:onClick="choosefile"
        android:layout_gravity="center"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_marginTop="16dp"
        android:textColor="#ff3503"
        android:textStyle="bold"
        android:background="@drawable/mybutton"/>
</LinearLayout>
